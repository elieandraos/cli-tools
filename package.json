{
    "name": "@elieandraos/cli-tools",
    "version": "0.0.5",
    "description": "A collection of nodeJs helper functions and an automated release script",
    "source": "src/index.js",
    "main": "dist/index.js",
    "scripts": {
        "info": "npm list -depth 0 && npm list -g --depth=0 && npm outdated || exit 0",
        "build": "node scripts/build.js",
        "test": "jest --verbose --coverage",
        "lint": "npx eslint src --fix",
        "format": "npx prettier --write .",
        "release": "node -r esm scripts/release.js"
    },
    "license": "ISC",
    "dependencies": {
        "dotenv": "^10.0.0",
        "@octokit/core": "^3.5.1",
        "chalk": "^4.1.2",
        "changelog-parser": "^2.8.0",
        "execa": "^5.1.1",
        "inquirer": "^8.2.0"
    },
    "devDependencies": {
        "esbuild": "^0.14.5",
        "esbuild-node-externals": "^1.4.1",
        "eslint": "^8.1.0",
        "esm": "^3.2.25",
        "jest": "^27.3.1",
        "mock-fs": "^5.1.2",
        "prettier": "2.5.0"
    }
}
